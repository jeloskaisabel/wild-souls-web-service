{"ast":null,"code":"import json from '../recipes.json';\nimport { api } from '@/config/site.config';\nexport default {\n  name: 'RecetaPage',\n  props: ['id'],\n\n  data() {\n    return {\n      recipe: json.recipes[this.id - 1],\n      productsInUse: []\n    };\n  },\n\n  methods: {\n    loadProductsInUse() {\n      for (let productId of this.recipe.recipe_products_in_use) {\n        api.get('products/getProduct/' + productId).then(response => {\n          this.productsInUse.push(response.data.product);\n        });\n      }\n    }\n\n  },\n\n  mounted() {\n    window.scrollTo({\n      top: 0,\n      behavior: 'smooth'\n    });\n    this.loadProductsInUse();\n  }\n\n};","map":{"version":3,"sources":["C:\\Users\\JELOSKA ISABEL\\Documents\\wild-souls\\Wild-Souls\\src\\pages\\Receta.vue"],"names":[],"mappings":"AA+EA,OAAO,IAAP,MAAiB,iBAAjB;AACA,SAAS,GAAT,QAAoB,sBAApB;AAEA,eAAe;AACb,EAAA,IAAI,EAAE,YADO;AAEb,EAAA,KAAK,EAAE,CAAC,IAAD,CAFM;;AAGb,EAAA,IAAI,GAAG;AACL,WAAO;AACL,MAAA,MAAM,EAAE,IAAI,CAAC,OAAL,CAAa,KAAK,EAAL,GAAU,CAAvB,CADH;AAEL,MAAA,aAAa,EAAE;AAFV,KAAP;AAID,GARY;;AASb,EAAA,OAAO,EAAE;AACP,IAAA,iBAAiB,GAAG;AAClB,WAAK,IAAI,SAAT,IAAsB,KAAK,MAAL,CAAY,sBAAlC,EAA0D;AACxD,QAAA,GAAG,CAAC,GAAJ,CAAQ,yBAAyB,SAAjC,EACG,IADH,CACS,QAAD,IAAc;AAClB,eAAK,aAAL,CAAmB,IAAnB,CAAwB,QAAQ,CAAC,IAAT,CAAc,OAAtC;AACD,SAHH;AAIF;AACF;;AARO,GATI;;AAmBb,EAAA,OAAO,GAAG;AACR,IAAA,MAAM,CAAC,QAAP,CAAgB;AAAE,MAAA,GAAG,EAAE,CAAP;AAAU,MAAA,QAAQ,EAAE;AAApB,KAAhB;AACA,SAAK,iBAAL;AACD;;AAtBY,CAAf","sourcesContent":["<template>\r\n  <div\r\n    class=\"row about-us-title d-flex justify-content-center align-items-center p-md-5\"\r\n    style=\"background-color: #fceeea\"\r\n  >\r\n    <div class=\"col-md-6 about-us-section\">\r\n      <h6 class=\"text-center mt-5 pb-md-4\">{{ recipe.recipe_category }}</h6>\r\n      <h1 class=\"text-center pb-md-4 d-none d-sm-block\" style=\"font-size: 8vh\">\r\n        {{ recipe.recipe_name }}\r\n      </h1>\r\n      <h2 class=\"text-center pb-md-4 d-block d-sm-none mb-