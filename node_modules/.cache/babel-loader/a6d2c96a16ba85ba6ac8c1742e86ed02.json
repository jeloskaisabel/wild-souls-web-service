productsCart); // Emitir evento\r\n    }\r\n  },\r\n  created() {\r\n    api.get('products/getProduct/' + this.id).then((response) => {\r\n      this.product = response.data.product;\r\n    });\r\n  },\r\n  mounted() {\r\n    window.scrollTo({ top: 0, behavior: 'smooth' });\r\n  },\r\n};\r\n</script>\r\n"],"sourceRoot":""},"metadata":{},"sourceType":"module"}